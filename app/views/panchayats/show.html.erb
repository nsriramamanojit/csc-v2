<div id="page_container">
  <div id="page_content">
    <div class="content">
      <h3>Panchayat | View Panchayat Details</h3>

      <table width="100%" border=0 cellspacing=1 cellpadding=3 class="listTable">
        <tr>
          <th width="20%">Name</th>
          <td><%= @panchayat.name %></td>
        </tr>
        <tr>
          <th width="20%">State</th>
          <td><%= @panchayat.state.name %></td>
        </tr>
        <tr>
          <th width="20%">Division</th>
          <td><%= @panchayat.division.name %></td>
        </tr>
        <tr>
          <th width="20%">District</th>
          <td><%= @panchayat.district.name %></td>
        </tr>
        <tr>
          <th width="20%">Block</th>
          <td><%= @panchayat.block.name.titleize %></td>
        </tr>
        <tr>
          <th width="20%">Description</th>
          <td><%= @panchayat.description %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

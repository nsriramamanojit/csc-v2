<div style="left: 378px; right: auto; bottom: auto; top: 230px;">
  <table cellspacing="0" cellpadding="0">
    <tbody>
    <tr>
      <td valign="top" rowspan="2">
        <%= link_to_avatar(@user) %>
      </td>
      <td valign="top">
        <div style="padding-left: 10px;">
          <%= link_to @user.name, '#', :style=>'color:#4b0082;' %>
        </div>
      </td>
    </tr>
    <tr valign="bottom">
      <td>
        <div style="padding-left: 10px;">
          <table>
            <tr>
              <td>
                Email
              </td>
              <td>
                :
              </td>
              <td>
                <%= @user.email %>
              </td>
            </tr>
            <tr>
              <td>
                Father Name
              </td>
              <td>
                :
              </td>
              <td>
                <%= @user.father_name? ? @user.father_name.titleize : 'N.A' %>
              </td>
            </tr>
            <tr>
              <td>
                DOB
              </td>
              <td>
                :
              </td>
              <td>
                <%= @user.dob? ? @user.dob.strftime("%d-%b-%m") : 'N.A' %>
              </td>
            </tr>
            <tr>
              <td>
                Gender
              </td>
              <td>
                :
              </td>
              <td>
                <%= @user.gender? ? @user.gender.titleize : 'N.A' %>
              </td>
            </tr>
            <tr>
              <td>
                Address
              </td>
              <td>
                :
              </td>
              <td>
                <%= @user.address1? ? @user.address1.titleize : 'N.A' %>
              </td>
            </tr>
          </table>
        </div>
      </td>
    </tr>
    </tbody>
  </table>
</div>
<div id="page_container">
  <div id="page_content">
    <div class="content">
      <h3>Block | View Block Details</h3>

      <table width="100%" border=0 cellspacing=1 cellpadding=3 class="listTable">
        <tr>
          <th width="20%">Name</th>
          <td><%= @block.name %></td>
        </tr>
        <tr>
          <th width="20%">Reference Name</th>
          <td><%= @block.short_code %></td>
        </tr>
        <tr>
          <th width="20%">State</th>
          <td><%= @block.state.name %></td>
        </tr>
        <tr>
          <th width="20%">Division</th>
          <td><%= @block.division.name %></td>
        </tr>
        <tr>
          <th width="20%">District</th>
          <td><%= @block.district.name %></td>
        </tr>
        <tr>
          <th width="20%">Description</th>
          <td><%= @block.description %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="form-container">
  <p class="legend">
    <strong>Note:</strong>
    Required fields are marked with an asterisk (<em>*</em>)
  </p>
  <%= simple_form_for(@division, :validate => true) do |f| %>
      <fieldset>
        <%= f.association :state, :collection => State.active, :prompt => "Select State "%>
        <%= f.input :name,:placeholder=>"Enter Division Name" %>
        <%= f.input :description %>
        <%= f.input :short_code, :label => 'Reference Name' %>
        <%= f.submit 'Save', :disable_with=>'Please wait...' %>
      </fieldset>
  <% end %>
</div>